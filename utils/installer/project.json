{
  "name": "installer",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "utils/installer/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx-electron:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/utils/installer",
        "main": "utils/installer/src/main.ts",
        "tsConfig": "utils/installer/tsconfig.app.json",
        "assets": ["utils/installer/src/assets"]
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "fileReplacements": [
            {
              "replace": "utils/installer/src/environments/environment.ts",
              "with": "utils/installer/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "nx-electron:execute",
      "options": {
        "buildTarget": "installer:build"
      }
    },
    "package": {
      "executor": "nx-electron:package",
      "options": {
        "name": "installer",
        "frontendProject": "",
        "sourcePath": "dist/apps",
        "outputPath": "dist/packages",
        "prepackageOnly": true
      }
    },
    "make": {
      "executor": "nx-electron:make",
      "options": {
        "name": "installer",
        "frontendProject": "",
        "sourcePath": "dist/apps",
        "outputPath": "dist/executables"
      }
    },
    "lint": {
      "command": "eslint utils/installer/**/*.ts"
    }
  }
}
