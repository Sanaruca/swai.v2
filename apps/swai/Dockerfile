# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build swai`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t swai`.
FROM oven/bun:1.2-alpine

ARG PORT=3000
ARG HOST=0.0.0.0
ARG BASE_URL=http://0.0.0.0
ARG API_BASE_URL=http://0.0.0.0


ENV HOST=$HOST
ENV PORT=$PORT
ENV API_BASE_URL=$API_BASE_URL

WORKDIR /app

RUN addgroup --system swai && \
          adduser --system -G swai swai

COPY dist/apps/swai swai/
COPY package.json .
COPY prisma/schema.prisma .
RUN chown -R swai:swai .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN bun i -p --no-save --ignore-scripts
RUN bunx prisma generate

CMD [ "bun", "swai/server/server.mjs" ]
